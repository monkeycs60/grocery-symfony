{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<section class="shopping-cart py-5">
		<div class="container">
			<h1 class="mb-5">Votre panier</h1>
			{% if cartItems is empty %}
				<div class="alert alert-info">Votre panier est vide.</div>
			{% else %}
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Produit</th>
								<th scope="col">Prix unitaire</th>
								<th scope="col">Quantité</th>
								<th scope="col">Total</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for item in cartItems %}
								<tr>
									<td>
										<div class="d-flex align-items-center">
											{% if item.product.images|length > 0 %}
												{% set image = item.product.images.first %}
												<img src="{{ asset('images/products/' ~ image.imageName) }}" alt="{{ item.product.name }}" class="img-fluid" style="width: 100px;">
											{% else %}
												<img src="{{ asset('/images/product-placeholder.png') }}" alt="{{ item.product.name }}" class="img-fluid" style="width: 100px;">
											{% endif %}
											<div class="ms-3">
												<strong>{{ item.product.name }}</strong>
												<div>{{ item.product.description }}</div>
											</div>
										</div>
									</td>
									<td>{{ (item.product.price / 100) | number_format(2, ',', ' ') }}€</td>
									<td>{{ item.quantity }}</td>
									<td>{{ (item.quantity * item.product.price / 100) | number_format(2, ',', ' ') }}€</td>
									<td>
										<a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">Retirer</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="d-flex justify-content-between align-items-center mt-4">
					<a href="{{ path('product_list') }}" class="btn btn-outline-secondary">Continuer vos achats</a>
					<a href="{{ path('checkout') }}" class="btn btn-primary">Procéder au paiement</a>
				</div>
			{% endif %}
		</div>
	</section>
{% endblock %}
